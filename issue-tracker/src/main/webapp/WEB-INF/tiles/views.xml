<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <definition name="hftemplate" template="/WEB-INF/views/template/default/hftemplate.jsp">
        <put-attribute name="header" value="/WEB-INF/views/template/default/header.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/views/template/default/footer.jsp"/>
    </definition>

    <definition name="ftemplate" template="/WEB-INF/views/template/default/ftemplate.jsp">
        <put-attribute name="footer" value="/WEB-INF/views/template/default/footer.jsp"/>
    </definition>

    <definition name="dashboard" extends="hftemplate">
        <put-attribute name="content" value="/WEB-INF/views/jsp/dashboard.jsp"/>
    </definition>

    <definition name="login" extends="ftemplate">
        <put-attribute name="content" value="/WEB-INF/views/jsp/login.jsp"/>
    </definition>

</tiles-definitions>